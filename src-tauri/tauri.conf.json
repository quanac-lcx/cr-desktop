{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Cloudreve",
  "version": "0.1.0",
  "identifier": "cloudreve.desktop",
  "build": {
    "frontendDist": "../ui/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "yarn run dev",
    "beforeBuildCommand": "yarn run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Cloudreve",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": false
      },
      {
        "label": "add-drive",
        "title": "Add Drive",
        "width": 510,
        "height": 680,
        "resizable": false,
        "fullscreen": false,
        "visible": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "transparent": true,
        "windowEffects":{
          "effects": ["mica","acrylic"]
        },
        "decorations": false,
        "minimizable": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
